currentBuild.displayName = "online-shopping-#"+currentBuild.number

pipeline{
    agent any
    
   
    stages{
        stage("Git Checkout"){
            steps{
                git 'https://github.com/nh00/PetClinic.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                sh "mv target/*.war target/mypet.war"
                
            }
        }
        stage("deploy-dev"){
            steps{
                sshagent(['tomcat']) {
    // some block
    
             sh """
                    scp -o StrictHostKeyChecking=no target/mypet.war ubuntu@172.31.40.185:/opt/tomcat/
                    ssh ubuntu@172.31.40.185 /opt/tomcat/bin/shutdown.sh
                    ssh ubuntu@172.31.40.185 /opt/tomcat/bin/shart.sh
                """
    }
               
            }
            
            }
        }
    }

