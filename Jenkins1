currentBuild.displayName = "online-shopping-#"+currentBuild.number

pipeline{
    agent any
    
   
    stages{
        stage("Git Checkout"){
            steps{
                git 'https://github.com/nh00/PetClinic.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                
            }
        }
        stage("deploy-dev"){
            steps{
                
                sh """
                    echo 'hello deploy'
                """
            }
            
            }
        }
    }

